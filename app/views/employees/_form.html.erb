<style media="screen">
  .button {
    float: right;
    margin-right: 2px;
  }

  .well {
    min-height: 300px
  }
</style>

<div class="well">
  <%= form_for @employee do |f| %>
  <% if @employee.errors.any? %>
  <div id="errors_explimination">
    <ul>
      <% @employee.errors.full_messages.each do |msg| %>
      <li class="alert alert-danger"><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <p class="form-group">
    <%= f.label :first_name %>
    <%= f.text_field :first_name , class: 'form-control'  %>
  </p>

  <p class="form-group">
    <%= f.label :last_name %>
    <%= f.text_field :last_name , class: 'form-control'  %>
  </p>

  <p class="form-group">
    <%= f.label :department %>
    <%= f.text_field :department , class:'form-control', require: true %>
  </p>

  <p>
    <%= link_to 'BACK' , employees_path ,class: 'btn btn-default button' %>
    <%= f.submit class:'btn btn-primary button' %>
  </p>
  <% end %>
</div>
