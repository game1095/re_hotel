<style media="screen">
  .button {
    float: right;
    margin-right: 2px;
  }

  .well2 {
    min-height: 430px;
  }
</style>


  <div class="container">
    <h1 class="text-center">Room Reservation</h1>
  <div class="row">
    <div class="col-md-8">
      <div class="row">
        <div class="col-md-12">
          <div class="well">
            <h2 class="text-center">Room Information</h2>
            <p>
              <strong>Number</strong>
              <%= @rooms.room_number %>
            </p>

            <p>
              <strong>Price</strong>
              <%= @rooms.room_price %> à¸¿

            </p>
            <p>
              <strong>Description</strong>
              <%= @rooms.room_des %>
            </p>


          </div>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <div class="well">
            <h2 class="text-center">Customer's reservation</h2>
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>First Name</th>
                  <th>Last Name</th>
                  <th>Telephone Number</th>
                  <th>Book Date</th>
                </tr>
              </thead>
              <% @rooms.customer.each do |reservation| %>
              <tbody>
                <tr>
                  <td><%= reservation.first_name%></td>
                  <td><%= reservation.last_name %> </td>
                  <td><%= reservation.tel_no%></td>
                  <td><%= reservation.booking_date%></td>
                </tr>
              </tbody>
              <% end %>
            </table>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-4 ">
      <div class="well well2">
        <h2>Customer information</h2>
        <%= form_for([@rooms, @rooms.customer.build]) do |f| %>
        <p class="form-group">
          <%= f.label :first_name  %>
          <%= f.text_field :first_name , class: 'form-control' %>
        </p>

        <p>
          <%= f.label :last_name %>
          <%= f.text_field :last_name , class: 'form-control' %>
        </p>

        <p>
          <%= f.label :tel_no %>
          <%= f.number_field :tel_no , class: 'form-control' %>
        </p>
        <p>
          <%= f.label :booking_date %>
          <%= f.date_field :booking_date , class: 'form-control' %>
        </p>
        <p>
          <%= link_to "Back", rooms_path , class: 'btn btn-default button' %>
          <%= f.submit "RESERSE ROOM" , class: 'btn btn-success button' %>
        </p>

        <% end %>
        </div>
      </div>
    </div>
    </div>
  </div>
</div>
